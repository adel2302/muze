<!DOCTYPE html>
<html>
<head>
  <title>Muze</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
    
  
    <% if user_signed_in? %>
						<ul>
							<li><%= link_to 'Account', edit_user_registration_path, class:"btn btn-primary" %></li>
							<li><%= link_to 'Sign out', destroy_user_session_path,class:"btn btn-success", :method => :delete %></li>
						</ul>
					<% else %>
						<ul>
							<li><%= link_to 'Sign up', new_user_registration_path, class:"btn btn-primary" %></li>
							<li><%= link_to 'Sign in', new_user_session_path, class:"btn btn-success" %></li>
						</ul>
						
						
	<% end %>
	<h2><a href="/">Muze</a></h2>
</nav>
<%= yield %>

</body>
</html>
